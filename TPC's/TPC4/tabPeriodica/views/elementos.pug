extends layout

block content
    .w3-card-4
        header.w3-container.w3-cyan
            h3.w3-center Tabela Periódica
        .w3-container
                header.w3-container.w3-light-blue.w3-margin-top
                    h4.w3-center Elementos
                table(class="w3-table-all")
                    tr 
                        th.w3-pale-blue Símbolo
                        th.w3-pale-blue Nome 
                        th.w3-pale-blue Número Atómico                      
                    each e in elementos
                        tr
                            td
                                a(href=prefixo + "elementos/" + e.id)= e.simb
                            td= e.name
                            td= e.anumber 
        footer(class="w3-container w3-cyan")
            adress.w3-right Diogo Pereira
            a(href="javascript:history.back()") Voltar
            adreess /
            a(href="/") Home
