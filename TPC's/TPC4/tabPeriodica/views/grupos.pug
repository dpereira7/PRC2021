extends layout

block content
    .w3-card-4
        header.w3-container.w3-cyan
            h3.w3-center Tabela Periódica
        .w3-container
                header.w3-container.w3-light-blue.w3-margin-top
                    h4.w3-center Grupos
                table(class="w3-table-all")
                    tr 
                        th.w3-pale-blue Id
                        th.w3-pale-blue Número 
                        th.w3-pale-blue Nome
                    each g in grupos
                        tr
                            td
                                a(href=prefixo + "grupos/" + g.id)= g.id
                            td= g.number
                            td= g.name 
        footer(class="w3-container w3-cyan")
            adress.w3-right Diogo Pereira
            a(href="javascript:history.back()") Voltar
            adreess /
            a(href="/") Home
