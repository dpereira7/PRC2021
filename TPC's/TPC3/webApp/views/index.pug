extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3.w3-center Lista de repositórios criados no GraphDB 
        if reps.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th Nome/ID
                        th URI/Código
                        th Descrição
                        th Estado
                    each r in reps
                        tr
                            td
                                a(href= prefixo + r.id)= r.id
                            td= r.uri
                            td= r.title
                            td= r.state
        else
            div(class="w3-container")
                p Ainda não existem repositórios criados no GraphDB.
        footer(class="w3-container w3-teal")
            adress.w3-right Diogo Pereira
            a(href="javascript:history.back()") Voltar
            adreess /
            a(href="/") Home
